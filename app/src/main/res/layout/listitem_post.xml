<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listitem_post_selector"
    android:minHeight="110dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/left_strip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="4dip"
        android:layout_marginLeft="8dip"
        android:background="@drawable/u47" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="8dip">

        <TextView
            android:id="@+id/title"
            android:layout_width="200dip"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/mid_strip"
            android:ellipsize="end"
            android:fadingEdge="horizontal"
            android:paddingBottom="12dip"
            android:singleLine="true"
            android:text="烟雨江南"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/mid_strip"
            android:layout_alignRight="@+id/right_strip_up"
            android:paddingBottom="12dip"
            android:paddingRight="12dip"
            android:text="昨天20:30"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/mid_strip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/dot"
            android:layout_centerVertical="true"
            android:background="@drawable/u28_line" />

        <TextView
            android:id="@+id/content"
            android:layout_width="250dip"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/mid_strip"
            android:layout_marginTop="6dip"
            android:paddingTop="4dip"
            android:text="不应该放弃，直到失去的那一刻."
            android:textColor="#999999"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/content"
            android:layout_marginTop="6dip"
            android:layout_toLeftOf="@+id/comment_pic"
            android:paddingRight="4dip"
            android:text="23"
            android:textColor="#66CCCC"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/comment_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/time"
            android:layout_alignTop="@+id/content"
            android:layout_marginRight="10dp"
            android:background="@drawable/u31" />

        <ImageView
            android:id="@+id/right_strip_up"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dip"
            android:background="@drawable/u19_line" />

        <ImageView
            android:id="@+id/dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dip"
            android:background="@drawable/u29" />

        <ImageView
            android:id="@+id/right_strip_down"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dip"
            android:background="@drawable/u19_line" />
    </RelativeLayout>
</LinearLayout>